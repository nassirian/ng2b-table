{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "rootDir": ".",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "mapRoot": "",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "stripInternal": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "",
    "paths": {
    }

  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "./dist",
    "skipTemplateCodegen": true
  }
}
